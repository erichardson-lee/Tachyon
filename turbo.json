{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/master",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "publish": {
      "dependsOn": [
        "^build",
        "build"
      ],
      "outputs": []
    },
    "docs": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [ "docs/**" ]
    }
  }
}
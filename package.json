{
  "name": "@tachyonjs/monorepo",
  "private": true,
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "docs": "typedoc --entryPointStrategy packages . --name 'Tachyon API' --out docs/api",
    "format": "prettier --config .prettierrc '{examples,libs}/**/src/**/*' --write",
    "lint:dependencies": "check-dependency-version-consistency .",
    "lint": "eslint '{examples,libs}/**/src/**/*.{js,ts,vue}'",
    "publish": "turbo run publish",
    "test": "turbo run test"
  },
  "workspaces": [
    "examples/*",
    "libs/*"
  ],
  "devDependencies": {
    "@types/eslint": "^8.4.1",
    "@types/prettier": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "check-dependency-version-consistency": "^2.0.2",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "turbo": "^1.1.3",
    "typedoc": "^0.22.15",
    "typescript": "^4.5.5"
  }
}
